<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/login_coffee_background"
    android:orientation="vertical"
    tools:context="applicationcafebistro.ca.polymtl.equipe3.client.applicationcafebistro.view.Identification">
    <LinearLayout
        android:id="@+id/top_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_transparent_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="180dp"
            android:layout_marginTop="160dp"
            android:layout_gravity="center"
            android:background="@drawable/login_titles_display" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_animation"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">
    <EditText
        android:id="@+id/login"
        android:layout_width="270dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/login_text"
        android:inputType="textPersonName"
        android:shadowColor="@color/other_music_in_list"
        android:textColor="@color/other_music_in_list"
        android:textColorHighlight="@color/other_music_in_list"
        android:textColorHint="@color/other_music_in_list"
        android:textColorLink="@color/other_music_in_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <applicationcafebistro.ca.polymtl.equipe3.client.applicationcafebistro.components.button.IdentificationButton
            android:id="@+id/identificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_login_style"
            android:text="@string/sign_up"/>
    </LinearLayout>
</LinearLayout>

